{
  "name": "hotel-america-back-end-v2.0",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:GerardoDev25/Hotel-america-back-end-v2.0.git",
  "author": "Gerardo Miranda <gerardodev25@gmail.com>",
  "license": "MIT",
  "scripts": {
    "seed": "ts-node-dev ./src/data/seed/seed.ts",
    "dev": "tsnd --respawn --clear src/app.ts",
    "build": "rimraf ./dist && tsc",
    "start": "npm run build && node dist/app.js",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:test-up": "docker compose -f docker-compose.test.yml --env-file .env.test up -d",
    "docker:test-down": "COMPOSE_FILE=docker-compose.test.yml docker compose down",
    "test": "npm run docker:test-up && jest",
    "test:watch": "jest --watch",
    "test:coverage": "npm run docker:test-up && npm run prisma:migrate-test && npm run prisma:generate-test && dotenv -e .env.test jest --coverage",
    "prisma:migrate": "prisma migrate dev",
    "prisma:generate": "prisma generate",
    "prisma:migrate-test": "npx dotenv -e .env.test -- npx prisma migrate deploy",
    "prisma:generate-test": "npx dotenv -e .env.test -- npx prisma generate"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.0",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "prisma": "^5.18.0",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@prisma/client": "5.18.0",
    "dotenv": "^16.4.5",
    "env-var": "^7.5.0",
    "express": "^4.19.2",
    "uuid": "^10.0.0"
  }
}
