{
  "name": "hotel-america-back-end-v2.0",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:GerardoDev25/Hotel-america-back-end-v2.0.git",
  "author": "Gerardo Miranda <gerardodev25@gmail.com>",
  "license": "MIT",
  "scripts": {
    "seed": "ts-node-dev ./src/data/seed/seed.ts",
    "dev": "npm run docker:up && tsnd -r tsconfig-paths/register --respawn --clear src/app.ts",
    "build": "rimraf ./dist && tsc  --project tsconfig.prod.json && tsc-alias",
    "start": "npm run build && node dist/app.js",
    "lint": "eslint 'src/**/*.{ts,tsx,js,jsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx,js,jsx}' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,jsx,json,md}'",
    "delete-logs": "rimraf ./logs",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:test-up": "docker compose -f docker-compose.test.yml --env-file .env.test up -d",
    "docker:test-down": "COMPOSE_FILE=docker-compose.test.yml docker compose down",
    "test": "npm run docker:test-up && jest --runInBand",
    "test:watch": "npm run docker:test-up && jest --watch --runInBand --coverage",
    "test:coverage": "npm run docker:test-up && jest --coverage --runInBand",
    "prisma:migrate": "prisma migrate dev",
    "prisma:generate": "prisma generate",
    "prisma:migrate-test": "dotenv -e .env.test -- npx prisma migrate deploy",
    "prisma:generate-test": "dotenv -e .env.test -- npx prisma generate"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.5.0",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "dotenv-cli": "^7.4.2",
    "globals": "^15.9.0",
    "jest": "^29.7.0",
    "prisma": "^5.18.0",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.6.0",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.1.0",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "prettier": "^3.3.3",
    "@typescript-eslint/parser": "^8.6.0"
  },
  "dependencies": {
    "@prisma/client": "5.18.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "env-var": "^7.5.0",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^10.0.0",
    "winston": "^3.14.2"
  }
}
